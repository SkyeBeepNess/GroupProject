<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="195.0" prefWidth="192.0" style="-fx-background-color: #ECECEC; -fx-padding: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ImportConfirmationController">
    
    <VBox spacing="15" AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
        <!-- Заголовок -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Confirm Import" />

        <!-- Кликабельное имя файла -->
        <Label fx:id="fileLabel" onMouseClicked="#onFileClicked" style="-fx-text-fill: blue; -fx-underline: true; cursor: hand;" text="Selected File: " />

        <!-- Кнопки -->
        <HBox spacing="10">
            <Button fx:id="btnConfirm" onAction="#onConfirmClicked" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Confirm" />
            <Button fx:id="btnCancel" onAction="#onCancelClicked" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Cancel" />
        </HBox>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </VBox>

</AnchorPane>
